<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.food.project.mapper.SellerMapper">

	<select id="getmenu" resultType="com.food.project.domain.MenuVO" parameterType="String">
		select menu_code,menu_url,menu_surl,menu_name,menu_category,unit_price,menu_desc,truck_code from menu where truck_code = #{truckcode}
	</select>
	<insert id="insertmenu" parameterType="com.food.project.domain.MenuVO">
		insert into menu(menu_code,menu_name,menu_category,menu_url,unit_price,truck_code,menu_surl)
		values (concat(to_char(sysdate,'yymm'),to_char(MENU_SEQUENCE.NEXTVAL,'FM00000')),#{menu_name},#{menu_category},#{menu_url},#{unit_price},#{truck_code},#{menu_surl})
	</insert>
	
	<update id="updatemenu" parameterType="com.food.project.domain.MenuVO">
		update menu set menu_url =#{menu_url},menu_surl =#{menu_surl},menu_category =#{menu_category}, unit_price=#{unit_price},menu_name=#{menu_name} where menu_code = ${menu_code}
	</update>
	
	
</mapper>